{
  "name": "book-search",
  "version": "1.0.0",
  "description": "Mern Demo",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "author": "Luke Graham",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.6.4",
    "morgan": "^1.9.1",
    "react-router-dom": "^5.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukeevangraham/book-search.git"
  },
  "bugs": {
    "url": "https://github.com/lukeevangraham/book-search/issues"
  },
  "homepage": "https://github.com/lukeevangraham/book-search#readme"
}
